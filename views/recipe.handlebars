<style>
    :root {
    --orange: #fd8207;
    --grey: #eceae7;
    --beige: #CAB59b;
    --black: #0d0b08;
    --rust: #c35d13;
    --cream: #D3Ae5C;
    --light-white-background: #f4f2ef;
    --bubble-border: grey;
 }

* {
    margin: 0px;
    padding: 0px;
    border: 0px;
}

.recipe-nav {
    width: 100vw;
    height: 65px;
    background-color: #c35d13 !important;
    font-family: 'Fascinate', cursive;
    color: var(--cream);
    box-shadow: 0px 8px 5px var(--beige);
}

.nav-link {
    text-decoration: none;
    color: var(--cream);
    padding-left: 20px;
}

.recipe-header {
    height: 200px;
    {{!-- background-color: var(--rust); --}}
    text-align: center;
}

.recipe-name {
    padding-top: 75px;
    color: var(--cream);
    font-size: 300%;
    font-family: 'Fascinate', cursive;
    padding-bottom: 10px;
}

h4 {
    color: var(--cream);
    font-family: 'Fascinate', cursive;
}

.recipe-main {
    height: 80vh;
    width: 100%;
    
}

.line {
    margin: auto;
    height: 1px;
    width: 80%;
    border-top: var(--cream) 1px solid;
}

.ingredients-container {
    margin: auto;
    height: 250px;
    width: 80%;
    display: flex;
}

.ingredients-list {
    margin-left: auto;
    margin-right: auto;
    width: 60%;
}

.ingredients-header {
    padding-top: 10px;
    padding-bottom: 10px;
    color: #0d0b08;
}



